{
  "agent": {
    "default_profile": "write",
    "button": true,
    "default_model": {
      "model": "claude-sonnet-4",
      "provider": "copilot_chat"
    },
    "dock": "left",
    "play_sound_when_agent_done": true
  },
  "tab_size": 2,
  "autosave": "on_focus_change",
  "base_keymap": "VSCode",
  "buffer_font_family": "OperatorMono Nerd Font",
  "buffer_font_size": 17,
  "buffer_font_weight": 340,
  "buffer_line_height": "comfortable",
  "collaboration_panel": {
    "button": false
  },
  "confirm_quit": true,
  "context_servers": {
    "Context7": {
      "args": ["-y", "@upstash/context7-mcp"],
      "command": "npx",
      "source": "custom"
    }
  },
  "current_line_highlight": "all",
  "cursor_blink": true,
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150
    }
  },
  "ensure_final_newline_on_save": true,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "indent_guides": {
    "active_line_width": 3,
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "enabled": true,
    "line_width": 2
  },
  "inlay_hints": {
    "enabled": false
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    }
  },
  "minimap": {
    "show": "never"
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "button": false,
    "default_width": 240,
    "dock": "right",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "hide_root": false,
    "indent_guides": {
      "show": "always"
    },
    "indent_size": 20,
    "scrollbar": {
      "show": null
    },
    "show_diagnostics": "all"
  },
  "relative_line_numbers": true,
  "scroll_beyond_last_line": "off",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": false,
    "show_close_button": "hidden",
    "show_diagnostics": "errors"
  },
  "theme": {
    "dark": "Kanagawa Wave",
    "light": "Ros√© Pine Dawn",
    "mode": "system"
  },
  "toolbar": {
    "agent_review": true,
    "breadcrumbs": false,
    "code_actions": true,
    "quick_actions": false,
    "selections_menu": true
  },
  "ui_font_size": 17,
  "ui_font_weight": 340,
  "agent_font_size": 17,
  "vim_mode": true,
  "terminal": {
    "font_family": "OperatorMono Nerd Font",
    "font_weight": 340
  },
  "experimental.theme_overrides": {
    "border.variant": "#7e9cd8",
    "editor.active_line_number": "#7e9cd8",
    "editor.gutter.background": "#2A2A37",
    "editor.line_number": "#54546D",
    "panel.background": "#1F1F28",
    "panel.indent_guide_active": "#7e9cd8",
    "syntax": {
      "attribute": {
        "font_style": "italic"
      },
      "function": {
        "font_style": "italic",
        "font_weight": 900
      },
      "keyword": {
        "font_style": "italic"
      }
    }
  }
}
